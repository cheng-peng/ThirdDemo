<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lay_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <!--  half -->
        <com.cxp.charts.view.circle_chart.CircleChart01View
            android:id="@+id/halfcircle_view"
            android:layout_width="200dip"
            android:layout_height="100dip"
            android:layout_gravity="center_vertical|right" />

        <!--  full -->
        <com.cxp.charts.view.circle_chart.CircleChart02View
            android:id="@+id/circle_view"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:layout_gravity="center_vertical|left" />

        <!--  half -->
        <com.cxp.charts.view.circle_chart.CircleChart04View
            android:id="@+id/halfcircle_view2"
            android:layout_width="200dip"
            android:layout_height="100dip"
            android:layout_gravity="center_vertical|right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_sk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/lay_sp"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:layout_marginBottom="136dp" />

        <TextView
            android:id="@+id/tv_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-->滑动" />
    </LinearLayout>

</RelativeLayout>